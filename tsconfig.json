{
   "compilerOptions"       : {
      "lib"                      : ["es5", "es6"],
      "target"                   : "es2020",
      "module"                   : "commonjs",
      "moduleResolution"         : "node",
      "emitDecoratorMetadata"    : true,
      "experimentalDecorators"   : true,
      "sourceMap"                : true,
      "esModuleInterop"          : true,
      "outDir"                   : "./lib",
      "declaration"              : true
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules"
   ]
}